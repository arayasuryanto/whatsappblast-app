# nixpacks.toml - Ultra minimal for server-test.js
[phases.setup]
nixPkgs = ["nodejs_20"]

[phases.install]
cmds = [
  "echo 'Skipping npm install - using Node.js built-in modules only'",
  "mkdir -p uploads auth_info",
  "chmod -R 755 uploads auth_info"
]

[phases.build]
cmds = ["echo 'Build complete - Ultra minimal server ready'"]

[variables]
NODE_ENV = "production"

[start]
cmd = "node server-test.js"